<!DOCTYPE html>
<html>
<head>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.username %>. | 
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or 
    <%= link_to "Log in", root_url %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
<%= content_tag :div, msg, :id => "flash#{name}" %>
<% end %>

</head>
<body>

<%= yield %>

</body>
</html>
