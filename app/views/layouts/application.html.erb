<!DOCTYPE html>
<html>
	<head>
		<title>GroupBuy</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body id="layout_body">

		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<div class="container-fluid">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="brand" href="#" id="site_logo"> &nbsp&nbsp GroupBuy</a>
					<div class="nav-collapse collapse">
						<ul class="nav nav-pills pull-right ">
						<% if current_user %>
                            <li>
								<img src=<%= current_user.image_url %> />
							</li><li>
								<p class="navbar-text">
									|
								</p>
							</li><li>
								<p class="navbar-text">
									<%= link_to current_user.name, current_user, :class=>"navbar-link" %>
								</p>
							</li><li>
								<%= link_to "View Purchases", "#{::DOMAIN}purchases", :class=>"navbar-link"%>
							</li>
    					    <% if current_user.venmo.blank? %>
							<li>
      							<p class="navbar-text">
      								| Please attach a Venmo Account!
      							</p>
							</li><li>
      							<%= link_to "Authenticate", "/venmo/authenticate" %>
							</li><li>
								<p class="navbar-text">
									|
								</p>
							</li>
    						<% else %>
							<li>
      							<p class="navbar-text">
      								| Venmo: <%= current_user.venmo.username %>.
      							</p>
							</li><li>
      							<%= link_to "Not you?", "/venmo/authenticate" %>
							</li><li>
								<p class="navbar-text">
									|
								</p>
							</li>
    						<% end %>
							<li>
								<%= link_to "Log out", log_out_path, :class=>"navbar-link" %>
							</li>
						<% else %>
							<li>
								<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
							</li>
						<% end %>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>

		<div id="individual_page">
			<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>">
				<button type="button" class="close" data-dismiss="alert">
					&times;
				</button>
				<%= value %>
			</div>
			<% end %>
			<div class="row">
				<div class="span10 offset2">
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
